source "https://rubygems.org"

# Core Jekyll
gem "jekyll", "~> 4.3"

# Theme
gem "minima", "~> 2.5"

# Essential plugins
group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.12"
  gem "jekyll-sitemap"
end

# Windows timezone support
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
end
